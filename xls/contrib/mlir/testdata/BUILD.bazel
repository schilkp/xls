load("@bazel_skylib//rules:expand_template.bzl", "expand_template")
load("@llvm-project//llvm:lit_test.bzl", "lit_test")

package(
    default_visibility = ["//visibility:public"],
    licenses = ["notice"],
)

expand_template(
    name = "lit_site_cfg_py_gen",
    testonly = True,
    out = "lit.site.cfg.py",
    substitutions = {
        "\"@MLIR_XLS_SOURCE_DIR@\"": "RUNFILES_DIR",
        "\"@MLIR_XLS_TOOLS_DIR@\"": "RUNFILES_DIR",
        "\"@XLS_TOOLS_DIR@\"": "RUNFILES_DIR",
        "@LIT_SITE_CFG_IN_HEADER@": '''# Autogenerated, do not edit.
from python.runfiles import Runfiles
from pathlib import Path

r = Runfiles.Create()
LITE_CFG_PY = Path(r.Rlocation("com_google_xls/xls/contrib/mlir/testdata/lit.cfg.py"))
RUNFILES_DIR = LITE_CFG_PY.parents[3].absolute().as_posix()''',
        "@LLVM_TOOLS_DIR@": "../../llvm-project/llvm",
    },
    template = "lit.site.cfg.py.in",
)

# Equivalent of add_lit_testsuite from CMakeLists.txt.
[
    lit_test(
        name = "%s.test" % src,
        size = "small",
        srcs = [src],
        data = [
            "lit.cfg.py",
            "lit.site.cfg.py",
            "//xls/contrib/mlir:xls_opt",
            "//xls/contrib/mlir:xls_translate",
            "//xls/tools:codegen_main",
            "//xls/tools:eval_ir_main",
            "//xls/tools:eval_proc_main",
            "@llvm-project//llvm:FileCheck",
            "@llvm-project//llvm:not",
        ] + glob(["%s.bc" % src]),
        tags = ["mlir_xls_tests"],
        deps = ["@rules_python//python/runfiles"],
    )
    for src in glob(
        ["**/*.mlir", "**/*.ir"],
        # TODO(jpienaar): The lookup in RUNFILES does not seem to work for these files with the
        # current lit setup.
        exclude = [
            "**/translate_import_*.mlir",
            "**/translate_foreign.mlir",
        ],
    )
]

test_suite(
    name = "mlir_xls_tests",
    tags = ["mlir_xls_tests"],
)
